{
  "ci": {
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "apple-touch-icon": ["warn", { "numericValue": 0 }],
        "color-contrast": ["warn", { "numericValue": 0 }],
        "font-display": ["warn", { "numericValue": 0 }],
        "installable-manifest": ["warn", { "numericValue": 0 }],
        "label": ["warn", { "numericValue": 0 }],
        "maskable-icon": ["warn", { "numericValue": 0 }],
        "offline-start-url": ["warn", { "numericValue": 0 }],
        "service-worker": ["warn", { "numericValue": 0 }],
        "splash-screen": ["warn", { "numericValue": 0 }],
        "themed-omnibox": ["warn", { "numericValue": 0 }],
        "unminified-javascript": ["warn", { "numericValue": 0 }],
        "unsized-images": ["warn", { "numericValue": 0 }],
        "unused-css-rules": ["warn", { "numericValue": 0 }],
        "unused-javascript": ["warn", { "numericValue": 0 }],
        "uses-rel-preconnect": ["warn", { "numericValue": 0 }],
        "works-offline": ["warn", { "numericValue": 0 }],
        "uses-rel-preload": ["warn", { "numericValue": 0 }]
      }
    },
    "collect": {
      "numberOfRuns": 1,
      "settings": {
        "chromeFlags": [
          "--ignore-certificate-errors"
        ],
        "configPath": ".github/lighthouse/desktop-config.js"
      }
    }
  }
}
