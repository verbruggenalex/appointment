{
  "ci": {
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "render-blocking-resources": [
          "warn",
          {
            "maxLength": 0
          }
        ]
      }
    },
    "collect": {
      "numberOfRuns": 1,
      "settings": {
        "chromeFlags": [
          "--ignore-certificate-errors"
        ],
        "configPath": ".github/lighthouse/desktop-config.js"
      }
    }
  }
}
